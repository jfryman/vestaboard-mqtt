# Vestaboard API Configuration
# For Cloud API (default)
VESTABOARD_API_KEY=your_vestaboard_read_write_api_key_here

# For Local API (optional - set either VESTABOARD_LOCAL_API_KEY or USE_LOCAL_API=true)
# VESTABOARD_LOCAL_API_KEY=your_local_api_key_here
# USE_LOCAL_API=false
# VESTABOARD_LOCAL_HOST=vestaboard.local
# VESTABOARD_LOCAL_PORT=7000

# Board Type Configuration
# Specify which Vestaboard model you have:
# - "standard" = Standard Vestaboard (6 rows x 22 columns) - DEFAULT
# - "note" = Vestaboard Note (3 rows x 15 columns)
# - Custom dimensions as "rows,cols" (e.g., "3,15")
# VESTABOARD_BOARD_TYPE=standard

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# HTTP API Configuration
HTTP_PORT=8000
LOG_LEVEL=INFO