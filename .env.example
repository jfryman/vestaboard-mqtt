# Vestaboard API Configuration
# For Cloud API (default)
VESTABOARD_API_KEY=your_vestaboard_read_write_api_key_here

# For Local API (optional - set either VESTABOARD_LOCAL_API_KEY or USE_LOCAL_API=true)
# VESTABOARD_LOCAL_API_KEY=your_local_api_key_here
# USE_LOCAL_API=false
# VESTABOARD_LOCAL_HOST=vestaboard.local
# VESTABOARD_LOCAL_PORT=7000

# Board Type Configuration
# Specify which Vestaboard model you have:
# - "standard" = Standard Vestaboard (6 rows x 22 columns) - DEFAULT
# - "note" = Vestaboard Note (3 rows x 15 columns)
# - Custom dimensions as "rows,cols" (e.g., "3,15")
# VESTABOARD_BOARD_TYPE=standard

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# MQTT Topic Configuration (Multi-Vestaboard Support)
# Set a unique topic prefix for each Vestaboard instance
# Default: "vestaboard" (topics will be vestaboard/message, vestaboard/save/*, etc.)
# Example for multiple boards: "vestaboard1", "vestaboard2", "office-board"
MQTT_TOPIC_PREFIX=vestaboard

# MQTT Connection Settings
# Client ID for MQTT connection (leave empty for auto-generated)
MQTT_CLIENT_ID=
# Clean session flag - if true, broker discards previous session on reconnect
MQTT_CLEAN_SESSION=true
# Keep-alive interval in seconds
MQTT_KEEPALIVE=60
# Default QoS level (0=at most once, 1=at least once, 2=exactly once)
MQTT_QOS=0

# MQTT TLS/SSL Configuration (Optional - for secure connections)
# Enable TLS/SSL encryption
MQTT_TLS_ENABLED=false
# Path to CA certificate file (required if TLS enabled)
# MQTT_TLS_CA_CERTS=/path/to/ca.crt
# Path to client certificate file (optional, for mutual TLS)
# MQTT_TLS_CERTFILE=/path/to/client.crt
# Path to client key file (optional, for mutual TLS)
# MQTT_TLS_KEYFILE=/path/to/client.key
# Skip certificate verification (INSECURE - only for testing)
# MQTT_TLS_INSECURE=false

# MQTT Last Will and Testament (Optional)
# Topic for LWT message (enables LWT if set)
# MQTT_LWT_TOPIC=vestaboard/status
# Payload for LWT message
# MQTT_LWT_PAYLOAD=offline
# QoS level for LWT message
# MQTT_LWT_QOS=0
# Retain flag for LWT message
# MQTT_LWT_RETAIN=true

# HTTP API Configuration
HTTP_PORT=8000
LOG_LEVEL=INFO