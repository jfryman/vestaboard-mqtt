[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov
# Ignore codes that conflict with black or are redundant
ignore =
    E203,
    W503,
    E501
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F841,F811
    src/mqtt/handlers.py:F401
    src/state/manager.py:F401
